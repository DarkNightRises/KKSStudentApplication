<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image">

                <ImageView
                    android:id="@+id/alarmicomimage"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:onClick="reminderDelete"
                    android:src="@drawable/alarmicomimage" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@+id/image"
                android:id="@+id/textviewTitle">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:textColor="#2eb9df"
                    android:textSize="20dp"
                    android:text="karan batra Reminder"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@+id/textviewTitle">
                <TextView
                    android:id="@+id/day"
                    android:textSize="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="17"
                    android:textColor="#68ccf4" />
                <TextView
                    android:id="@+id/month"
                    android:textSize="18dp"

                    android:layout_marginTop="8dp"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:text="6"
                    android:textColor="#68ccf4" />
                <TextView
                    android:id="@+id/year"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:text="2017"
                    android:layout_marginRight="1dp"
                    android:textSize="18dp"

                    android:textColor="#68ccf4" />


            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
